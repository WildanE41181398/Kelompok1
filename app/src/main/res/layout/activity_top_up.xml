<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="viewStart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="12dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingRight="25dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_saldocontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lakukan langkah - langkah berikut untuk \nmelakukan Top Up saldo anda : \n\n
1. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi sed tellus in leo congue pulvinar. \n\n
2. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi sed tellus in leo congue pulvinar \n\n
3. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi sed tellus in leo congue pulvinar \n\n
4. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi sed tellus in leo congue pulvinar"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_saldomengerti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorAccent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Mengerti"
                    android:textColor="@color/ic_laundry_regis_background"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_saldocontent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>