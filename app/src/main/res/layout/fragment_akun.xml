<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".ui.akun.AkunFragment">

    <RelativeLayout
        android:id="@+id/rel_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutfoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_account_circle_black_18dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_foto"
                style="@style/Widget.AppCompat.ActionButton.CloseMode"
                android:text="Ganti Foto"
                android:layout_below="@id/foto_profil"
                android:textColor="@color/ic_laundry_regis_background"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@+id/layoutfoto"
            android:id="@+id/layoutbiodata"
            >

            <LinearLayout
                android:id="@+id/linear_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:paddingStart="10dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/namaBio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Masukkan Nama Anda"
                    android:inputType="textPersonName"
                    android:background="@drawable/rounded" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/emailBio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Masukkan Email Anda"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/rounded" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor HP :"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

                <EditText
                    android:id="@+id/no_hpBio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Masukkan No Hp Anda"
                    android:inputType="phone"
                    android:background="@drawable/rounded" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat :"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/alamatBio"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded"
                    android:gravity="top|left"
                    android:hint="Masukkan Alamat Anda"
                    android:maxLength="300"
                    android:inputType="textMultiLine"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin :"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <Spinner
                    android:id="@+id/spinnerJK"
                    style="@android:style/Widget.DeviceDefault.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_judultimetrs1"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:entries="@array/jenis_kelamin"
                    android:background="@drawable/rounded"
                    android:popupBackground="@drawable/rounded"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir :"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tanggal_lahirBio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:text="Masukkan Tanggal Lahir Anda"
                    android:background="@drawable/rounded" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username :"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/usernameBio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Masukkan Username Anda"
                    android:inputType="textPersonName"
                    android:background="@drawable/rounded" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/linear_bio"
                android:layout_toRightOf="@id/btn_update"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedfillmerah"
                android:padding="4dp"
                android:text="RESET\nPASSWORD"
                android:textColor="@color/ic_laundry_regis_background"
                android:textSize="9sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/linear_bio"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/roundedfillijo"
                android:padding="4dp"
                android:text="UPDATE"
                android:layout_centerInParent="true"
                android:textColor="@color/ic_laundry_regis_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_aktivasi"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/linear_bio"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/btn_update"
                android:background="@drawable/roundedfillbiru"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="AKTIVASI"
                android:textColor="@color/ic_laundry_regis_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/btn_update"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedfillmerah"
                android:padding="4dp"
                android:text="LOGOUT"
                android:textColor="@color/ic_laundry_regis_background"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
